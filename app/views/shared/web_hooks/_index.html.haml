%hr
.card
  .card-header
    %h5
      = hook_class.underscore.humanize.titleize.pluralize
      (#{hooks.size})

  - if hooks.any?
    %ul.content-list
      - hooks.each do |hook|
        = render 'shared/web_hooks/hook', hook: hook
  - else
    %p.text-center.gl-mt-3.gl-mb-3
      = _('No webhooks found, add one in the form above.')

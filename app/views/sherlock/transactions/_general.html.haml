.gl-mt-3
  .card
    .card-header
      %strong
        = t('sherlock.general')
    %ul.content-list
      %li
        %span.light
          #{t('sherlock.id')}:
        %strong
          = @transaction.id
      %li
        %span.light
          #{t('sherlock.type')}:
        %strong
          = @transaction.type
      %li
        %span.light
          #{t('sherlock.path')}:
        %strong
          = @transaction.path
      %li
        %span.light
          #{t('sherlock.time')}:
        %strong
          = @transaction.duration.round(2)
          = t('sherlock.seconds')
      %li
        %span.light
          #{t('sherlock.query_time')}
        %strong
          = @transaction.query_duration.round(2)
          = t('sherlock.seconds')
      %li
        %span.light
          #{t('sherlock.finished_at')}:
        %strong
          = time_ago_with_tooltip @transaction.finished_at
